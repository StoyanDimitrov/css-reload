{
  "manifest_version": 2,
  "version": "0.2.3",
  "name": "__MSG_title__",
  "description": "__MSG_description__",
  "homepage_url": "https://github.com/StoyanDimitrov/css-reload",

  "icons": {
    "96": "assets/tool-styleeditor.svg",
    "48": "assets/tool-styleeditor.svg"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "page_action": {
    "default_icon": "assets/tool-styleeditor.svg",
    "default_title": "__MSG_pageActionTitle__"
  },

  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+F9"
      },
      "description": "Reloads the CSS"
    }
  },

  "options_ui": {
    "page": "assets/options.html",
    "browser_style": true
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],

  "default_locale": "en",

  "applications": {
    "gecko": {
      "id": "css-reload@stoyan"
    }
  }
}
